                <filter class="solr.LowerCaseFilterFactory" />       
            </analyzer>
            <analyzer  type="query">
                 <tokenizer class="gov.nih.nlm.ncbi.seqr.tokenizer.SequenceTokenizerFactory" indexer="/panfs/pan1.be-md.ncbi.nlm.nih.gov/pubchem_rnd/users/hanl/solr/hackson/SOLR_HOME/lib/good_one.11.index" skip="5"/>
